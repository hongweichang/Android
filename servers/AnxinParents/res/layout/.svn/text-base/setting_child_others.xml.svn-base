<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/toptitle"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toptitle"
        android:layout_margin="10dp"
        android:background="@drawable/child_other_bg"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="姓      名" />

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="： " />

                <TextView
                    android:id="@+id/tv_sco_name"
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="性      别" />

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="： " />

                <TextView
                    android:id="@+id/tv_sco_sex"
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="所在学校" />

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="：" />

                <TextView
                    android:id="@+id/tv_sco_schoolname"
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="班     级" />

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="：" />

                <TextView
                    android:id="@+id/tv_sco_class"
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="学生卡号" />

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="：" />

                <TextView
                    android:id="@+id/tv_sco_cardnum"
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="学     号" />

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="：" />

                <TextView
                    android:id="@+id/tv_sco_schoolnum"
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="班  主  任" />

                <TextView
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="：" />

                <TextView
                    android:id="@+id/tv_sco_teacher"
                    style="@style/font_setting_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</RelativeLayout>