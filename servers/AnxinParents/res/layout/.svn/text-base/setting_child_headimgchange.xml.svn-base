<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/toptitle"
        layout="@layout/title_bar" />

    <com.yutong.axxc.parents.view.common.CircularImage
        android:id="@+id/iv_schc_head"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/toptitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/userimg_bg_current"
        android:padding="4dp"
        android:scaleType="center"
        android:src="@drawable/user_head_default" />

    <LinearLayout
        android:id="@+id/ll_schc_fromalbum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_sch_mtip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/common_button"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:src="@drawable/accountlable" />

        <TextView
            android:id="@+id/tv_sh_newsnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="从相册中选择"
            android:textColor="#55503C"
            android:textSize="15sp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_schc_fromcamera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_schc_fromalbum"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/common_button"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:src="@drawable/accountlable" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="拍照"
            android:textColor="#55503C"
            android:textSize="15sp"
            android:typeface="monospace" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sch_mtip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_schc_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="点击图片翻转一下" />

</RelativeLayout>