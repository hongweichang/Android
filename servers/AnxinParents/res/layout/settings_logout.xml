<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/settingsBackGroundRL"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#00ffffff" >

	<LinearLayout
	    android:id="@+id/ll_sl_container"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="#E1000000"
	    android:gravity="center"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/settingsAlertTV"
		    android:layout_width="wrap_content"
		    android:layout_height="50dp"
		    android:gravity="center_vertical"
		    android:text="@string/settings_logout_hint"
		    android:textAppearance="@style/content_font_16"
		    android:textColor="@color/white" />

		<Button
		    android:id="@+id/settingsLogoutButton"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:layout_marginBottom="25dp"
		    android:layout_marginLeft="14dp"
		    android:layout_marginRight="14dp"
		    android:background="@drawable/logout"
		    android:text="@string/settings_logout"
		    android:textAppearance="@style/content_font_20"
		    android:textColor="@color/white" />

		<Button
		    android:id="@+id/settingsCancelButton"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:layout_marginBottom="25dp"
		    android:layout_marginLeft="14dp"
		    android:layout_marginRight="14dp"
		    android:background="@drawable/settings_cancel"
		    android:text="@string/settings_logout_cancel"
		    android:textAppearance="@style/content_font_20"
		    android:textColor="@color/white" />

	</LinearLayout>
</RelativeLayout>