<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/toptitle"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toptitle"
        android:background="#f0ece1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_cbg_top"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/childbg_green"
                android:orientation="vertical"
                android:visibility="invisible" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="vertical"
                android:fadingEdgeLength="10dp"
                android:scrollX="0dp"
                android:scrollbars="none" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_sch_childname"
                        style="@style/font_childname_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="设定昵称" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_sch_childname"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/ll_l1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/block_bg"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:id="@+id/customsetColorRL"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/settingitem_bg_allround"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/tv_scpci_colorname"
                                        style="@style/font_setting_list_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:text="个性色彩" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="15dp"
                                        android:src="@drawable/more_gray" />

                                    <TextView
                                        android:id="@+id/tv_sch_colorname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                       android:layout_toRightOf="@+id/iv_sch_colorset"
                                        android:text="宁静绿" />

                                    <ImageView
                                        android:id="@+id/iv_sch_colorset"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_centerVertical="true"
                                         android:layout_marginLeft="100dp"
                                        android:src="@drawable/color_green" />

                                </RelativeLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider_color"
                                    android:visibility="gone" />

                                <RelativeLayout
                                    android:id="@+id/customsetSoundRL"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/settingitem_bg_bottomround"
                                    android:orientation="vertical"
                                    android:visibility="gone" >

                                    <TextView
                                        android:id="@+id/textView3"
                                        style="@style/font_setting_list_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:text="提示音" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="15dp"
                                        android:src="@drawable/more_gray" />

                                    <TextView
                                        android:id="@+id/tv_sch_tipsound"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="100dp"
                                        android:text="[上车啦]" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/block_bg"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:id="@+id/remindsetRL"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/settingitem_bg_topround"
                                    android:orientation="vertical" >

                                    <TextView
                                        style="@style/font_setting_list_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:text="乘车点提醒" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="15dp"
                                        android:src="@drawable/more_gray" />
                                </RelativeLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider_color" />

                                <RelativeLayout
                                    android:id="@+id/pushsetRL"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/settingitem_bg"
                                    android:orientation="vertical" >

                                    <TextView
                                        style="@style/font_setting_list_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:text="消息推送" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="15dp"
                                        android:src="@drawable/more_gray" />
                                </RelativeLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider_color" />

                                <RelativeLayout
                                    android:id="@+id/historyRL"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/settingitem_bg_bottomround"
                                    android:orientation="vertical" >

                                    <TextView
                                        style="@style/font_setting_list_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:text="乘车记录" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="15dp"
                                        android:src="@drawable/more_gray" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/block_bg"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:id="@+id/parentRL"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/settingitem_bg_topround"
                                    android:orientation="vertical" >

                                    <TextView
                                        style="@style/font_setting_list_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:text="其他家长" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="15dp"
                                        android:src="@drawable/more_gray" />
                                </RelativeLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider_color" />

                                <RelativeLayout
                                    android:id="@+id/othersRL"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/settingitem_bg_bottomround"
                                    android:orientation="vertical" >

                                    <TextView
                                        style="@style/font_setting_list_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:text="小孩信息" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="15dp"
                                        android:src="@drawable/more_gray" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="58dp"
                            android:layout_height="59dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="45dp"
                            android:background="@drawable/userbg_setting"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" >

                            <com.yutong.axxc.parents.view.common.CircularImage
                                android:id="@+id/cimv_sch_childhead"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="4dp"
                                android:contentDescription=""
                                android:src="@drawable/default_boy" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_l9"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_below="@+id/ll_l1"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <Button
                                android:id="@+id/btn_sch_cancelrelation"
                                style="@style/content_font_18"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/red_button_bg"
                                android:paddingBottom="10dp"
                                android:text="取消关联"
                                android:textColor="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/ll_l9"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
       <com.yutong.axxc.parents.view.common.LoadingOverlay
        android:id="@+id/loadingoverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>