<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 应用样式 -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- 文本样式 -->
    <style name="text_main_tab">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="text_title_btn">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <!-- <item name="android:textColor">#ffffff</item> -->
    </style>

    <style name="text_pop_content">
        <item name="android:textSize">13.6sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="text_station_list">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_mappop_car">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="text_carlist_num">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="text_carlist_time">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#3174C3</item>
    </style>

    <!-- 星期选择样式 -->
    <style name="weekSelectItemStyle">
        <item name="android:background">@drawable/bg_weekselect_noround</item>
        <item name="android:textColor">@drawable/color_txt_weekselect</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="weekSelectItemStyleFrist">
        <item name="android:background">@drawable/bg_weekselect_leftround</item>
        <item name="android:textColor">@drawable/color_txt_weekselect</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="weekSelectItemStyleLast">
        <item name="android:background">@drawable/bg_weekselect_rightround</item>
        <item name="android:textColor">@drawable/color_txt_weekselect</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!-- 其他样式 -->
    <style name="cover_transparent">
        <item name="android:windowBackground">@color/bg_pagecover</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>

    <!-- 超级标题 -->
    <style name="titleSuper">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 一级标题 -->
    <style name="titleFirst">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 二级标题 -->
    <style name="titleSecond">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- 三级标题 -->
    <style name="titleThird">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="shadow1">
        <item name="android:shadowColor">#ff0000ff</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
    </style>

    <style name="content_font_30">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="content_font_25">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="content_font_20">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="content_font_19">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="content_font_18">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="content_font_17">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="content_font_16">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="content_font_15">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="content_font_13">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="content_font_12">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="content_font_10">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="content_font_8">
        <item name="android:textSize">6dp</item>
    </style>

    <!-- zhouzechen add -->
    <style name="text_favor_site_list_content">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">            #4a4a4a       </item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="text_setting_list_content">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">            #585858        </item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="text_setting_gray_title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">            #4a4a4a        </item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="text_mappop_remind">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">            #FFFFFF       </item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- 弹出框控件 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 自定义对话框样式 -->
    <style name="dialogStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="btnStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:text">150sp</item>
    </style>

    <style name="Theme.Start" parent="android:Theme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
    
    <!-- 放大镜样式 -->
    <style name="title_right_button">
        <item name="android:paddingLeft">@dimen/title_rightButton_padding</item>
        <item name="android:paddingRight">@dimen/title_rightButton_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/back_button_default_style</item>
    </style>
    
    <!-- 圆形照片 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    
    <style name="driver_title_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#c5c5c5</item>
    </style>
    
    <style name="driver_content_style">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>