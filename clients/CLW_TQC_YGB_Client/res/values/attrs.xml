<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="attr_exedittext">
        <attr name="hintText" format="string" />
        <!-- 提示文本 -->
        <attr name="labelIcon" format="reference" />
        <!-- 输入提示图片 -->
        <attr name="paddingLeft" format="dimension" value="10dp" />
        <!-- text输入字符串左padding -->

    </declare-styleable>
    <declare-styleable name="anxin">
          <!-- 是否子控件可拖动 -->
        <attr name="draggable" format="boolean" />
         <!-- 拖动时是否在控件内部 -->
        <attr name="draginside" format="boolean" />
        <!-- 不能拖动的控件id -->
        <attr name="except" format="reference" />
        <!-- 自适应dock方向 -->
        <attr name="dockside">
            <flag  name="none" value="0x0100" />
            <flag  name="left" value="0x0001" />
            <flag  name="right" value="0x0002" />
            <flag  name="top" value="0x0003" />
            <flag  name="bottom" value="0x0004" />
        </attr>
    </declare-styleable>

</resources>