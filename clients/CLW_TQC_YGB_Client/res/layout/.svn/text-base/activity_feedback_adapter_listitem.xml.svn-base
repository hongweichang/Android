<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/item_root_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        
        android:layout_margin="10dp"
        
        android:background="@drawable/bg_block"
        android:orientation="vertical"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip" >

        <!-- 时间 -->

        <TextView
            android:id="@+id/suggestion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2014/05/06 12:23"
            android:textSize="16sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/suggestion_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:minLines="1"
            android:text="@string/activity_feedback_sugession"
            android:textColor="@color/black_light"	
            android:textSize="17sp" />

        <View
            android:id="@+id/divisionLine"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@color/bg_gray_dark" />

      <!--   回复模块 -->
        <LinearLayout
            android:id="@+id/reply_LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/suggestion_reply_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="回复时间："
                android:textSize="16sp"
                android:typeface="normal" />
            
            <TextView
                android:id="@+id/suggestion_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dip"
                android:text="2014/05/06 12:23"
                android:textSize="16sp"
                android:typeface="normal" />
            
        </LinearLayout>

        <!-- android:textColor="@color/bg_blue" -->
       
        <TextView
            android:id="@+id/suggestion_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dp"
            android:minLines="1"
            android:maxLength="1000"
            android:text="@string/activity_feedback_sugession"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>