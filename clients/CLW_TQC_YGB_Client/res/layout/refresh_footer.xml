<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/pull_to_refresh_footer"
	android:layout_width="match_parent"
	android:layout_height="@dimen/refreshHeight"
	android:background="@color/transparent" >
	<ProgressBar
		android:id="@+id/pull_to_load_progress"
		android:layout_width="@dimen/refreshProgressWidth"
		android:layout_height="@dimen/refreshProgressHeight"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/refreshProgressMarginLeft"
		android:indeterminateDrawable="@drawable/refresh_progress"
		android:visibility="gone" />
	<ImageView
		android:id="@+id/pull_to_load_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/refreshImageMarginLeft"
		android:src="@drawable/ic_pulltorefresh_arrow_up" />
	<TextView
		android:id="@+id/pull_to_load_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="@string/pull_to_refresh_footer_pull_label"
		android:textAppearance="@style/content_font_20"
		android:textColor="@color/black" />
</RelativeLayout>