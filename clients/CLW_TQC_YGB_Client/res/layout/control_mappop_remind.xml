<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_cmr_name"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/bg_mappop_remind_left"
        android:gravity="center"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_cmr_name"
            style="@style/text_mappop_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="淋雨房站" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cmr_clock"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_mappop_remind_right"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_cmr_clock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:src="@drawable/bg_clock_attention"
            android:visibility="visible" 
            android:layout_gravity="center_vertical|center_horizontal"
            />
        
    </LinearLayout>

</LinearLayout>